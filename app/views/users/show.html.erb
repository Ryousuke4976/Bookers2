<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<h1>Users#show</h1>
<%= render "users/list", user:@user, book:@book %>
<div class="allbook">
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <br>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<p>copyright</p>