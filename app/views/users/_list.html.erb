<div class="profile">
  <h2>User info</h2>
  <p><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></p>

  <p>name <%= user.name %></p>
  <p>introduction : <%= user.introduction %></p>
  <% if user.id == current_user.id %>
   <%= link_to "aaaa", edit_user_path(current_user.id) %>
  <% else %>
    <%= link_to "aaaa", user_path(current_user.id) %>
  <% end %>
</div>
<div class="sidebar">
  <%= form_for(book) do |f| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= book.errors.count %>件のエラーが発生しました。</h2>
        <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <label class="control-label sr-only">Title</label>
      <%= f.text_field :title, class:"form-control", placeholder:"Title" %>
    </div>
    <div>
      <label class="control-label sr-only">Opinion</label>
      <%= f.text_area :body, class:"form-control", placeholder:"Opinion" %>
    </div>
    <%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  <% end %>
</div>