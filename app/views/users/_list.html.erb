<div class="col-xs-3">
  <div class="profile">
    <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row" style="padding: 6px 12px">
      <% if user.id == current_user.id %>
        <%= link_to edit_user_path(current_user.id) ,class: "btn btn-default col-xs-12" do %>
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
      <% else %>
        <%= link_to user_path(current_user.id) ,class: "btn btn-default col-xs-12" do %>
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="sidebar">
  <h2>New book</h2>
    <%= form_for(book) do |f| %>
      <% if book.errors.any? %>
        <div id="error_explanation">
          <h2><%= book.errors.count %> 件の error がありました。</h2>
          <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <p class="">Title</p>
        <%= f.text_field :title, class:"form-control" %>
      </div>
      <div>
        <p class="">Opinion</p>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div style="padding:6px;">
      <%= f.submit "Create Book", class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>