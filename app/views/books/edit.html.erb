<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <%= form_for(@book) do |f|%>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= @book.errors.count %> 件の error がありました。</h2>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field row">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "col-xs-12 book_title"%>
        </div>
        <div class="field row">
          <label for="book-opinion">Opinion</label>
          <%= f.text_area :body, class: "col-xs-12 book_opinion" %>
        <%= f.submit "Update Book" ,class: "btn btn-lg btn-block btn-base-1 mt-20 btn-primary col-xs-12" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Show", book_path(@book.id) %>
<span>|</span>
<%= link_to "Back", books_path %>

<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-9">
      <p>CopyRight Infratop.inc</p>
    </div>
  </div>
</div>
