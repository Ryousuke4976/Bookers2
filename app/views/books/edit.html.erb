<h1>Editing Book</h1>
<%= form_for(@book) do |f|%>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> 件の error がありました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>
