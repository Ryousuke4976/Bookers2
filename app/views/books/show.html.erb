<%= render "users/list", locals: {user: @user, book: @book} %>

<h2>Book detail</h2>
<br>
<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user.id) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
        <% end %>
      </td>
      <td>
        <%= @books.title %>
      </td>
      <td>
        <%= @books.opinion %>
      </td>
    <% if @user.id == current_user.id %>
      <td>
        <%= link_to "Edit", edit_book_path(@books.id) %>
      </td>
      <td>
        <%= link_to "Delete", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
      </td>
    <% end %>
    </tr>
  </tbody>
</table>