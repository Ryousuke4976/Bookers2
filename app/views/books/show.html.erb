<%= render "users/list", locals: {user: @user, book: @book} %>

<h2>Book detail</h2>
<br>
<table>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(user.id) do %>
          <%= attachment_image_tag @user, :profile_tag %>
        <% end %>
      </td>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.opinion %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>