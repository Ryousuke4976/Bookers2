<%= render 'users/list', user:@user, book:@book  %>

<div class="col-xs-9">
  <h2>Book detail</h2>
  <br>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><br>
            <%= @books.user.name %>
          <% end %>
        </td>
        <td>
          <%= @books.title %>
        </td>
        <td>
          <%= @books.body %>
        </td>
      <% if @books.user.id == current_user.id %>
        <td>
          <%= link_to "Edit", edit_book_path(@books.id), class: "btn-sm btn-success"%>
        </td>
        <td>
          <%= link_to "Delete", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？" , class: "btn-sm btn-danger"%>
        </td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-9">
      <p>CopyRight Infratop.inc</p>
    </div>
  </div>
</div>